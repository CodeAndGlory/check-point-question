body {
    margin: 0;
    padding: 20px;
    font-family: Helvetica;
    font-size: 15px;
}

.check-point-question p {
    margin-bottom: 0;
}

.check-point-question ul {
    list-style: none;
    margin-top: 5px;
    padding-left: 0;
}

.check-point-question {
    border: 1px solid #c2c2c2;
    padding: 10px;
    width: 300px;
    margin: 10px;
}

.check-point-correct {
    color: green;
}

.check-point-incorrect {
    color: red;
}